// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  username     String         @unique
  email        String         @unique
  password     String
  Customer     Customer[]
  Address      Address[]
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  MateriaPrima MateriaPrima[]
}

model Customer {
  id                 String    @id @default(uuid())
  user               User      @relation(fields: [user_id], references: [id])
  user_id            String
  address            Address   @relation(fields: [address_id], references: [id])
  address_id         String
  name               String
  status             Boolean
  email              String?
  phone              String
  birth_date         DateTime?
  genre              String?
  cpf                String?
  cnpj               String?
  inscricao_estadual String?
  razao_social       String?
  created_at         DateTime  @default(now())
  updated_at         DateTime  @updatedAt
}

model MateriaPrima {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  name       String
  quantity   Float
  unit       Unit     @default(un)
  amount     Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Unit {
  un
  kg
  l
}

model Address {
  id         String     @id @default(uuid())
  user       User       @relation(fields: [user_id], references: [id])
  user_id    String
  address    String
  district   String
  uf         String
  cep        String?
  city       String
  number     Int?
  reference  String?
  Customer   Customer[]
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}
